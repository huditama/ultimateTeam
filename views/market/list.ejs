<!DOCTYPE html>
<html>

<head>

    <title>Marketplace</title>

</head>

<body background="http://www.ipzusa.com/wp-content/uploads/2017/01/GOOOOOALLLLL.jpg">
    <% include ../partials/nav.ejs %>
    <center>
        <% if(errorMsg) { %>
        <% errorMsg.split('\n').forEach((error) => { %>
        <div style="margin-top:6%">
            <div class="alert alert-danger" role="alert" style="width:30%">
                <%= error.split('Error:')[1] %>
            </div>
        </div>
        <%   }) %>
        <% } %>

        <div style="margin-top:6%">

            <h2>The Marketplace</h2>
            <table class="table table-striped table-dark" style="width:50%">
                <% if(query.orderBy == 'ASC') { %>
                <% query.orderBy = 'DESC' %>
                <% } else { %>
                <% query.orderBy = 'ASC' %>
                <% } %>

                <thead class="thead-dark">
                    <tr>
                        <th scope="col"><a href="/market?field=name&orderBy=<%= query.orderBy %>"
                                style="color:black">Name</a></th>
                        <th scope="col"> <a href="/market?field=attack&orderBy=<%= query.orderBy %>"
                                style="color:black">âš”Attackâš”</a>
                        </th>
                        <th scope="col"><a href="/market?field=defence&orderBy=<%= query.orderBy %>"
                                style="color:black">ðŸ›¡DefenceðŸ›¡</a></th>
                        <th scope="col"><a href="/market?field=price&orderBy=<%= query.orderBy %>"
                                style="color:black">Price</a></th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% allPlayers.forEach((player) => { %>
                    <tr>
                        <td><%= player.name %></td>
                        <td><%= player.attack %></td>
                        <td><%= player.defence %></td>
                        <td><%= player.price %></td>
                        <td><a href="/market/buy/<%= player.id %>" style="color:seagreen"
                                onclick="return confirm('Are you sure you want to buy this player?')">ðŸ’°BUYðŸ’°</a></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

